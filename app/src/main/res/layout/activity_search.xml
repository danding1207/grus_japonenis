<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="searchViewModel"
            type="com.msc.grus_japonenis.search.SearchViewModel" />

    </data>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:layout_collapseMode="pin"
                app:titleTextAppearance="@style/Toolbar.TitleText">

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="12dp"
                    android:hint="搜索目的地，游记"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appbar"
            android:background="@color/color_gray"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:id="@+id/ll_destinations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:visibility="@{searchViewModel.isDestinationsShow ? View.VISIBLE : View.GONE}">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="目的地攻略"
                        android:textColor="@color/font_gray" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/font_gray" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:onClick="@{() -> searchViewModel.getPresenter().destination(searchViewModel.getDestinationsSearch().getData().getDestinations().get(0).getId())}"
                        >

                        <ImageView
                            android:id="@+id/iv_destinations_1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:imageUrl = "@{searchViewModel.getDestination1Url}"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{searchViewModel.getDestination1Name}"
                                android:textColor="@color/primary_dark_material_dark"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@{searchViewModel.getDestination1Des}"
                                android:textColor="@color/font_gray" />

                        </LinearLayout>


                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:visibility="@{searchViewModel.isDestinations2Show ? View.VISIBLE : View.GONE}"
                        android:background="@color/font_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:onClick="@{() -> searchViewModel.getPresenter().destination(searchViewModel.getDestinationsSearch().getData().getDestinations().get(1).getId())}"

                        android:visibility="@{searchViewModel.isDestinations2Show ? View.VISIBLE : View.GONE}">

                        <ImageView
                            android:id="@+id/iv_destinations_2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:imageUrl = "@{searchViewModel.getDestination2Url}"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{searchViewModel.getDestination2Name}"
                                android:textColor="@color/primary_dark_material_dark"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@{searchViewModel.getDestination2Des}"
                                android:textColor="@color/font_gray" />

                        </LinearLayout>


                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:visibility="@{searchViewModel.isDestinations3Show ? View.VISIBLE : View.GONE}"
                        android:background="@color/font_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="@{searchViewModel.isDestinations3Show ? View.VISIBLE : View.GONE}"
                        android:onClick="@{() -> searchViewModel.getPresenter().destination(searchViewModel.getDestinationsSearch().getData().getDestinations().get(2).getId())}"
                        >

                        <ImageView
                            android:id="@+id/iv_destinations_3"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:imageUrl = "@{searchViewModel.getDestination3Url}"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{searchViewModel.getDestination3Name}"
                                android:textColor="@color/primary_dark_material_dark"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@{searchViewModel.getDestination3Des}"
                                android:textColor="@color/font_gray" />

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10dp"
                        android:visibility="@{searchViewModel.isDestinationsTipShow ? View.VISIBLE : View.GONE}"
                        android:background="@color/font_gray" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="@{searchViewModel.getDestinationTip}"
                        android:textColor="@color/appTextColor"
                        android:textSize="20sp"
                        android:visibility="@{searchViewModel.isDestinationsTipShow ? View.VISIBLE : View.GONE}"
                        android:onClick="@{() -> searchViewModel.getPresenter().destinationTip()}"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_plans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:visibility="@{searchViewModel.isPlansShow ? View.VISIBLE : View.GONE}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="相关氢游记"
                        android:textColor="@color/font_gray" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/font_gray" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:onClick="@{() -> searchViewModel.getPresenter().plan(searchViewModel.getDestinationsSearch().getData().getUser_activities().get(0).getId())}"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_plans_1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:imageUrl = "@{searchViewModel.getPlan1Url}"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{searchViewModel.getPlan1Topic}"
                                android:textColor="@color/primary_dark_material_dark"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@{searchViewModel.getPlan1Des}"
                                android:textColor="@color/font_gray" />

                        </LinearLayout>


                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/font_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:onClick="@{() -> searchViewModel.getPresenter().plan(searchViewModel.getDestinationsSearch().getData().getUser_activities().get(1).getId())}"
                        android:visibility="@{searchViewModel.isPlans2Show ? View.VISIBLE : View.GONE}">

                        <ImageView
                            android:id="@+id/iv_plans_2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:imageUrl = "@{searchViewModel.getPlan2Url}"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{searchViewModel.getPlan2Topic}"
                                android:textColor="@color/primary_dark_material_dark"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@{searchViewModel.getPlan2Des}"
                                android:textColor="@color/font_gray" />

                        </LinearLayout>


                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/font_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:onClick="@{() -> searchViewModel.getPresenter().plan(searchViewModel.getDestinationsSearch().getData().getUser_activities().get(2).getId())}"
                        android:visibility="@{searchViewModel.isPlans3Show ? View.VISIBLE : View.GONE}">

                        <ImageView
                            android:id="@+id/iv_plans_3"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:imageUrl = "@{searchViewModel.getPlan3Url}"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{searchViewModel.getPlan3Topic}"
                                android:textColor="@color/primary_dark_material_dark"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@{searchViewModel.getPlan3Des}"
                                android:textColor="@color/font_gray" />

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10dp"
                        android:background="@color/font_gray" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="更多相关游记"
                        android:onClick="@{() -> searchViewModel.getPresenter().planTip()}"
                        android:textColor="@color/appTextColor"
                        android:textSize="20sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_users"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:visibility="@{searchViewModel.isUsersShow ? View.VISIBLE : View.GONE}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="相关用户"
                        android:textColor="@color/font_gray" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/font_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:onClick="@{() -> searchViewModel.getPresenter().user(searchViewModel.getDestinationsSearch().getData().getUsers().get(0).getId())}"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_user_1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:imageUrlCircle = "@{searchViewModel.getUser1Url}"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@{searchViewModel.getUser1Name}"
                            android:textColor="@color/primary_dark_material_dark"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:onClick="@{() -> searchViewModel.getPresenter().user(searchViewModel.getDestinationsSearch().getData().getUsers().get(1).getId())}"
                        android:visibility="@{searchViewModel.isUsers2Show ? View.VISIBLE : View.GONE}">

                        <ImageView
                            android:id="@+id/iv_user_2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:imageUrlCircle = "@{searchViewModel.getUser2Url}"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@{searchViewModel.getUser2Name}"
                            android:textColor="@color/primary_dark_material_dark"
                            android:textSize="16sp" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="@{searchViewModel.isProgressBarShow ? View.VISIBLE : View.GONE}"
            />

    </android.support.design.widget.CoordinatorLayout>
</layout>