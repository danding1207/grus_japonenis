    <style name="CustomBottomTabLayout" parent="@style/Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2.0dip</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
        <item name="tabPaddingStart">12.0dip</item>
        <item name="tabPaddingEnd">12.0dip</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="@android:style/Widget">
        <item name="tabIndicatorColor">?colorAccent</item>
        <item name="tabIndicatorHeight">2.0dip</item>
        <item name="tabBackground">?selectableItemBackground</item>
        <item name="tabMaxWidth">@dimen/design_tab_max_width</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
        <item name="tabPaddingStart">12.0dip</item>
        <item name="tabPaddingEnd">12.0dip</item>
    </style>

    <style name="Widget.Design.TabLayout" parent="@style/Base.Widget.Design.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="Toolbar.TitleText" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18.0sp</item>
